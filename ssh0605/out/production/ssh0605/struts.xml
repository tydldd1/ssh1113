<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="defaults" extends="struts-default">
		<global-results>
			<result name="loginout" type="redirect">/login.jsp</result>
			<result name="input">error/error.jsp</result>
		</global-results>
	</package>

	<constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <constant name="struts.multipart.maxSize" value="80097152"></constant>
    <constant name="struts.configuration.xml.reload" value="false" />
    <!--设置打开访问静态成员-->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true" />
	
	<include file="struts-login.xml"></include>
	<include file="struts-hibernate.xml"></include>
	<include file="struts-JSOperate.xml"></include>
</struts>
